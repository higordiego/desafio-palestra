<% include ./header %>
<div class="row">
	<div class="col-md-5 col-md-offset-3" style="margin-top:100px">
		<div class="panel panel-default">
			<div class="panel-heading">Insira a resposta</div>
			<div class="panel-body">
				<div class="form-group  col-md-offset-2 ">
					<img class='img-responsive' src="images/Rapadura-min.png"  >
				</div>
				<% if(messages.info){ %>
					<div class="alert alert-dismissible alert-warning">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>Ops!!</strong> Código invalido... <br/>
					</div>
					<% } %>
					<form action="/validar" method="post">
						<div class="form-group">
							<label> Nome </label>
							<input type="text" name="nome" required class="form-control">
						</div>
						<div class="form-group">
							<label> Código </label>
							<input type="text" name="codigo" required class="form-control">
						</div>
						<br/>
						<button type="submit" class="btn btn-primary btn-lg btn-block">Validar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<footer class="footer">
		<div class="col-md-6  col-md-offset-4">
			<p class="text-muted">Desenvolvido por Higor Diego</p>
		</div>
	</footer>

	<% include ./footer %>