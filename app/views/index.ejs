<% include ./header %>
<div class="row">
	<div class="col-md-12">
		<div class="col-md-5" style="margin-top:100px">
			<div class="panel panel-default">
				<div class="panel-heading text-center" >Login e Senha</div>
				<div class="panel-body">
					<div class="form-group  col-md-offset-2 ">
						<img class='img-responsive' src="images/Rapadura-min.png"  >
					</div>
					<% if(messages.info){ %>
						<div class="alert alert-dismissible alert-warning">
							<button type="button" class="close" data-dismiss="alert">&times;</button>
							<strong>Ops!!</strong> Login ou Senha incorreta <br/>
						</div>
						<% } %>
						<form action="/login" method="post">
							<div class="form-group">
								<label> Login </label>
								<input type="text" name="login" required class="form-control">
							</div>
							<div class="form-group">
								<label> Senha </label>
								<input type="password" name="senha" required class="form-control">
							</div>
							<br/>
							<button type="submit" class="btn btn-primary btn-lg btn-block">Validar</button>
						</form>
					</div>
				</div>
			</div>
			<div class="col-md-7" style="margin-top:100px">
				<div class="panel panel-default">
					<div class="panel-heading text-center">Responda para preencher os Campos</div>
					<div class="panel-body">
						<div class="well text-success text-justify">
							<%=quest%>
						</div>
					</div>
					<div class="panel-footer">
						<div class="text-center text-warning"> Lembrando que a resposta corresponde ao login e senha </div> 
					</div>
				</div>
			</div>

		</div>
	</div>
	<footer class="footer">
		<div class="  col-xs-offset-1 col-md-offset-1">
			<a href="/dicabatata" class="text-muted">Desenvolvido por Higor Diego</a>
		</div>
	</footer>
	<script>
		setTimeout(function(){
			window.location.href = '/';
		}, 12000);
	</script>

	<% include ./footer %>